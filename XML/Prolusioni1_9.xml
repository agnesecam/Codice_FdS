        <group> <!--Testo e traduzione delle 3 prolusioni-->
            <group xml:id="fr_Prolusioni"> <!--TESTO FRANCESE DELLE 3 PROLUSIONI-->
                <text xml:id="fr_Prolusione-1"> <!--FR 1 PROLUSIONE-->
                    <body xml:lang="fr" source="#Bouquet-Engler2002" xml:id="body-francese">
                        <!--Nona pagina-->
                        <pb n="f1r" xml:id="body_p9" facs="#scan_p9"/>
                        <!--Numeri impaginazione a stampa e a mano-->
                        <ab>
                            <fw type="pageNum" xml:id="HandPageNumber-9" rend="align(left)" facs="#facs_HandPageNumber-9"> 9 </fw>
                        </ab>
                        <div xml:id="div_p9_fr" hand="#h1" type="box_testo">
                            <ab xml:id="pericope_91Aaaa021" n="21" xml:lang="FR" corresp="#it_91Aaaa021 #en_91Aaaa021" facs="#facs_pericope_91Aaaa021"> 
                                <lb xml:id="lb1_p9" n="1" facs="#facs_p9_lb1"/> 
                                [Vouloir étudier le langage] sans se donner la peine <add place="above" resp="#FdS">d’en étudier
                                les diverses manifestations qu’évidemment sont</add> les
                                <lb xml:id="lb2_p9" n="2" facs="#facs_p9_lb2"/>
                                <term ref="#langue1" rend="underline">langues</term> est une entreprise <w>absolu
                                <lb xml:id="lb3_p9" n="3" facs="#facs_p9_lb3"/>
                                ment</w> vaine, <add resp="#FdS">et chimérique;</add> d’un autre côté vouloir étudier les
                                <lb xml:id="lb4_p9" n="4" facs="#facs_p9_lb4"/>
                                <gap extent="1 words" reason="deleted" /> en oubliant que ces
                                <lb xml:id="lb5_p9" n="5" facs="#facs_p9_lb5"/>
                                <term ref="#langue1">langues</term> sont primordialement régies par
                                <lb xml:id="lb6_p9" n="6" facs="#facs_p9_lb6"/>
                                certains <gap extent="1 words" reason="deleted" /><term ref="#glossa-mancante"> principes</term>
                                <subst><del rend="overstrike" resp="#FdS">humain</del><add place="above" resp="#FdS"><gap extent="1 words" reason="deleted" /></add></subst>
                                qui<subst><del rend="overstrike" resp="#FdS"><gap extent="1 words" reason="deleted" /> </del><add place="above" resp="#FdS">sont</add></subst> résumés
                                <lb xml:id="lb7_p9" n="7" facs="#facs_p9_lb7"/>
                                dans <del rend="overstrike" resp="#FdS">pour</del> l’idée de <term ref="#langage2" rend="underline">langage</term> est <del rend="overstrike">d'un autre</del>
                                <lb xml:id="lb8_p9" n="8" facs="#facs_p9_lb8"/>
                                <del rend="overstrike">côté une entreprise denuée de tout in</del>
                                <lb xml:id="lb9_p9" n="9" facs="#facs_p9_lb9" break="no" rend="double-stroke"/>
                                <del rend="overstrike"><gap extent="2 words" reason="deleted" /></del> un travail
                                <choice><abbr resp="#FdS">enc +</abbr><expan>encore plus</expan></choice> dénué
                                <lb xml:id="lb10_p9" n="10" facs="#facs_p9_lb10"/>
                                de toute signification sérieuse, de toute
                                <lb xml:id="lb11_p9" n="11" facs="#facs_p9_lb11"/>
                                base <del rend="overstrike" resp="#FdS"><gap extent="1 words" reason="deleted" /></del>
                                scientifique véritable.
                            </ab>
                            <ab>
                                <lb xml:id="del_p9" n="12" facs="#facs_p9_del" />
                                <gap extent="15 lines" reason="deleted" />
                            </ab>                            
                        </div>
                    </body>
                </text>
            </group>  
            
            <group xml:id="it_Prolusioni" xml:lang="IT"> <!--TRADUZIONI ITALIANO DELLE 3 PROLUSIONI-->
                <text xml:id="it_Prolusione-1"> <!--ITA 1 PROLUSIONE-->
                    <body source="#Fadda2006" resp="#EF" xml:id="body-italiano">
                        <div xml:id="div_p9_it" hand="#h1" type="box_testo_it">
                            <ab xml:id="it_91Aaaa021" corresp="#pericope_91Aaaa021" xml:lang="IT">
                                <lb/>senza darsi la pena di studiarne le diverse manifestazioni, che, evidentemente, sono le 
                                <lb/>lingue è un’impresa assolutamente 
                                <lb/>vana, e chimerica; d’altro canto, voler studiare le 
                                <lb/>lingue dimenticando che tali 
                                <lb/>lingue sono rette in modo primordiale da 
                                <lb/>certi principi che 
                                <lb/>sono riassunti 
                                <lb/>nell’idea di linguaggio 
                                <lb/>è lavoro ancora più spoglio 
                                <lb/>di ogni significato serio, di ogni reale 
                                <lb/>base scientifica.
                            </ab>    
                        </div>                            
                    </body>
                </text>          
            </group>

            <group xml:id="en_Prolusioni" xml:lang="EN" > <!--TRADUZIONI INGLESE DELLE 3 PROLUSIONI-->
                <text xml:id="en_Prolusione-1"> <!--EN 1 PROLUSIONE-->
                    <body resp="#AC" xml:id="body-inglese">
                        <div xml:id="div_p9_en" hand="#h1" type="box_testo_en">
                            <ab xml:id="en_91Aaaa021" corresp="#pericope_91Aaaa021" xml:lang="EN"> 
                                <lb/>without bothering to study 
                                <lb/>its manifestations in various 
                                <lb/>languages is an entirely 
                                <lb/>vain and empty undertaking; on the other hand studying 
                                <lb/>languages while forgetting that 
                                <lb/>they are organized according to 
                                <lb/>certain fundamental principles which male up 
                                <lb/>the very idea of language is 
                                <lb/>a task even more 
                                <lb/>devoid of serious meaning, 
                                <lb/>or of any true scientific basis. 
                            </ab> 
                        </div>                         
                    </body>
                </text>       
            </group>
        </group>


