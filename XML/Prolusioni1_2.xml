                            <ab n="2"  xml:lang="FR" corresp="#pericope_91Aaaa002 it_91Aaaa002 en_91Aaaa002" facs="#facs_Pericope2b" part="F"> 
                                <lb xml:id="lb1_p2" n="1" facs="#p2_lb1"/>
                                l’<term subtype="?" ref="#histoire" facs="#facs_histoire-p2r1">histoire</term> de la civilisation
                            </ab>
                            <!--Fine 2a pericope-->
                            <!--Inizio 3a pericope-->
                            <ab n="3" xml:lang="FR" corresp="#pericope_91Aaaa003 it_91Aaaa003 en_91Aaaa003" facs="#facs_Pericope3">
                                - et j’aurais
                                <!--***CODICE PASSANISI-RAGUSA (Pp. 1-2)***-->
                                <lb xml:id="lb2_p2" n="2" facs="#p2_lb2"/>
                                ici à rappeler <add place="above" resp="#FdS">le</add> <del rend="overstrike">que</del> <del rend="overstrike">le</del> nom <add place="above" resp="#FdS">genevois,<unclear reason = "illegible"> dont nous sommes </unclear></add><gap quantity="4" unit="chars" reason="deleted"/> <del rend = "overstrike">glorieux à</del>
                                <lb xml:id="lb3_p2" n="3" facs="#p2_lb3"/>
                                fiers à d’autres égards encore <del rend="overstrike">pour notre Faculté</del>                                
                                <lb xml:id="lb4_p2" n="4" facs="#p2_lb4"/>
                                <metamark function = "insert"><add place="left" resp="#FdS"> <gap extent = "4 words" reason="deleted"/>
                                <lb xml:id="lb5_p2" n="5" facs="#p2_lb5"/>
                                <gap extent = "1 word" reason="deleted"/></add></metamark>                                
                                <lb xml:id="lb6_p2" n="6" facs="#p2_lb6"/>
                                <del rend = "overstrike">et</del><choice> <abbr resp = "#FdS">pr</abbr><expan>pour</expan></choice> notre patrie, d'<persName ref = "#AdPic">Adolphe Pictet</persName>, d' <add place="above"><choice><abbr>A<am>.</am>P<am>.</am></abbr><expan>A<ex>dolphe</ex> P<ex>ictet</ex></expan></choice></add> qui
                                <lb xml:id="lb7_p2" n="7" facs="#p2_lb7"/>
                                <gap extent = "3 words" reason="illegible"/>                                
                                <lb xml:id="lb8_p2" n="8" facs="#p2_lb8"/>
                                <add place="left" resp="#FdS">
                                <gap extent = "2 lines" reason="deleted"/>
                                </add>                                
                                <lb xml:id="lb9_p2" n="9" facs="#p2_lb9"/>
                                <del rend="overstrike">pour l'imitateur</del> le premier conçut <del rend="overstrike">ce</del>
                                <lb xml:id="lb10_p2" n="10" facs="#p2_lb10"/>
                                <add place = "left"><unclear reason = "illegible">méthodiquement</unclear></add> <del rend="overstrike">ce</del> <add place = "above"><unclear reason = "illegible">le parti</unclear></add> qu’on pouvait tirer <add place = "above"><gap extent = "1 word" reason = "deleted"/></add> de la <term ref="#langue1">langue</term> <del rend="overstrike">pour</del>
                                <lb xml:id="lb11_p2" n="11" facs="#p2_lb11"/>
                                <gap extent = "2 lines" reason = "deleted"/>                                
                                <lb xml:id="lb12_p2" n="12" facs="#p2_lb12"/>
                                <del rend="overstrike">et qui</del> comme témoin des âges préhistoriques, 
                                <lb xml:id="lb13_p2" n="13" facs="#p2_lb13"/>
                                et qui, <choice><abbr resp="#FdS">tt</abbr><expan>tout</expan></choice> en <gap extent = "2 words" reason="deleted"/> <add place="above" resp="#FdS">se <gap extent = "4 words" reason = "deleted"/> fiant</add> peut-être <add place="above"><unclear reason = "illegible">trop,</unclear> <del rend = "overstrike" resp = "#FdS">comme il</del> </add><del rend = "overstrike" resp = "#FdS">la sureté</del> <metamark function = "insert"><addSpan spanTo = "#span4" />
                                <lb xml:id="lb14_p2" n="14" facs="#p2_lb14"/>
                                <gap extent = "1 word" reason = "illegible"/>
                                était inévitable
                                <lb xml:id="lb15_p2" n="15" facs="#p2_lb15"/>
                                <choice><abbr resp="#FdS">ds</abbr><expan>dans</expan></choice> le <num type = "ordinal" value = "1">premier</num> <w>enthou-
                                <lb xml:id="lb16_p2" n="16" facs="#p2_lb16" break="no" rend="stroke"/>
                                -siasme</w> <del rend="overstrike">du</del>
                                <lb xml:id="lb17_p2" n="17" facs="#p2_lb17"/>
                                <del rend = "overstrike">grande</del> 
                                <lb xml:id="lb18_p2" n="18" facs="#p2_lb18"/>
                                que <unclear reason = "illegible">provoquait</unclear>
                                <lb xml:id="lb19_p2" n="19" facs="#p2_lb19"/>
                                <gap extent = "1 word" reason = "illegible" /> la 
                                <lb xml:id="lb20_p2" n="20" facs="#p2-lb20"/>
                                <choice><abbr resp="#FdS">révélati</abbr><expan>révélation</expan></choice>
                                <lb xml:id="lb21_p2" n="21" facs="#p2_lb21"/>
