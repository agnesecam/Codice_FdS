            <group xml:id="fr_Prolusioni"> <!--TESTO FRANCESE DELLE 3 PROLUSIONI-->
                <text xml:id="fr_Prolusione-1"> <!--FR 1 PROLUSIONE-->
                    <body xml:lang="fr" source="#Bouquet-Engler2002" xml:id="body-francese">
                        <!--Settima pagina-->
                        <pb n="f1r" xml:id="body_p7" facs="#scan_p7"/>
                        <!--Numeri impaginazione a stampa e a mano-->
                        <ab>
                            <fw type="pageNum" xml:id="HandPageNumber-7" rend="align(left)" facs="#facs_HandPageNumber-7"> 7 </fw>
                        </ab>
                        <div xml:id="div_p7_fr" hand="#h1" type="box_testo">
                            <!--Pagina 7-->
                            <ab xml:id="pericope_91Aaaa016" n="16" xml:lang="FR" corresp="#it_91Aaaa016 #en_91Aaaa0016" facs="#facs_pericope_91Aaaa016"> 
                                <lb xml:id="lb1_p7" n="1" facs="#facs_p7_lb1"/> 
                                serait peut-être l’<hi rend="underlined">homme</hi>, mais 
                                <lb xml:id="lb2_p7" n="2" facs="#facs_p7_lb2"/>
                                qu’il ne serait pas <add place="top" facs="#add1TOP_p7">un être se rapprochant même approximativement</add> <add place="above">de</add> l’homme <del rend="strikethrough"> <add place="above"> que nous</add><gap reason="cancelled" rend="underlined" extent="2 words"/></del>                                
                                <lb xml:id="lb3_p7" n="3" facs="#facs_p7_lb3"/>
                                <del rend="strikethrough"><add place="left">connaissons</add></del><del rend="underlined">et</del><del rend="strikethrough"><gap reason="cancelled" extent="7 words"/></del><add place="above"><unclear reason="illegible">que nous sommes,</unclear></add>
                                <lb xml:id="lb4_p7" n="4" facs="#facs_p7_lb4"/>
                                <del rend="strikethrough"><gap reason="cancelled" extent="3 words"/></del>parce que le <term ref="#langage1">langage</term>
                                <lb xml:id="lb5_p7" n="5" facs="#facs_p7_lb5"/>
                                a été <del rend="strikethrough"><gap reason="cancelled" extent="3 words"/></del> le <choice><abbr type="brevigraph" n="abbr1">+</abbr><expan n="exp1"> plus </expan></choice> <subst><del rend="strikethrough"><gap reason="cancelled" extent="2 words"/></del> <add type="above"><del rend="strikethrough"><gap reason="cancelled" extent="1 words"/></del>formidable</add></subst>
                                <lb xml:id="lb6_p7" n="6" facs="#facs_p7_lb6"/>
                                <add place="left">engin</add><del rend="strikethrough"><gap reason="cancelled" extent="3 words" /></del> <add place="above">d’</add><term ref="#glossa-mancante">action collective</term> <add place="above">d’une part</add>, <term ref="#glossa-mancante">et d’éducation</term>
                                <lb xml:id="lb7_p7" n="7" facs="#facs_p7_lb7"/>
                                <add facs="#add2LX_p7" place="left"><subst><del rend="strikethrough"><gap reason="cancelled"/></del><add place="below"> <term ref="#glossa-mancante">individuelle </term></add></subst></add><del rend="strikethrough"><damage agent="ink"/><gap reason="cancelled"/></del>de l’autre<ptr target="#n1"/>, <gap reason="illegible"/>                                
                                <lb xml:id="lb8_p7" n="8" facs="#facs_p7_lb8"/>
                                <del rend="strikethrough"><gap reason="cancelled"/></del><space facs="#space_1" />
                                <lb xml:id="lb9_p7" n="9" facs="#facs_p7_lb9"/>
                                <del rend="strikethrough"><gap reason="cancelled"/></del><gap reason="illegible"/> l’instrument sans                                
                                <lb xml:id="lb10_p7" n="10" facs="#facs_p7_lb10"/>
                                lequel <subst><add place="above">en fait </add><del rend="strikethrough"><gap reason="cancelled"/></del><add facs="#add3LX2_p7" place="left">l’individu ou l’espèce</add> <del rend="strikethrough"><gap reason="cancelled"/></del><add place="above">n’auraient jamais pu</add> </subst>même aspirer
                                <lb xml:id="lb11_p7" n="11" facs="#facs_p7_lb11"/>
                                à développer dans aucun sens <del rend="strikethrough"><gap reason="cancelled"/></del> ses <del rend="strikethrough"><gap reason="cancelled"/></del>
                                <lb xml:id="lb12_p7" n="12" facs="#facs_p7_lb12"/>
                                <term ref="#faculté">facultés natives</term><ptr target="#n2"/>.<del rend="strikethrough"><gap reason="cancelled"/></del><space facs="#space_2"/>
