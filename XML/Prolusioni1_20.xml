            <group xml:id="fr_Prolusioni"> <!--TESTO FRANCESE DELLE 3 PROLUSIONI-->
                <text xml:id="fr_Prolusione-1"> <!--FR 1 PROLUSIONE-->
                    <body xml:lang="fr" source="#Bouquet-Engler2002" xml:id="body-francese">
                        <!--Trentesima pagina-->
                        <pb n="f1r" xml:id="body_p20" facs="#scan_p20"/>
                        <!--Numeri impaginazione a stampa e a mano-->
                        <ab>
                            <fw type="pageNum" xml:id="HandPageNumber-20" rend="align(left)" facs="#facs_HandPageNumber-20"> 20 </fw>
                        </ab>
                        <div xml:id="div_p20_fr" hand="#h1" type="box_testo" >
                            <ab xml:id="pericope_91Aaaa066" n="66" xml:lang="FR" corresp="#it_91Aaaa066 #en_91Aaaa066" facs="#facs_pericope_91Aaaa066" >
                                <lb xml:id="lb1_p20" n="1" facs="#facs_p20_lb1"/> 
                                <w>Puis</w>
                                <pc force="weak">,</pc>
                                <seg>de même</seg>
                                <pc force="weak">,</pc>
                                <seg>nous considérerons </seg>
                                <del rend="overstrike" hand="author">le</del>
                                <add hand="author" place="supralinear">
                                    <unclear reason="eccentric ductus">ce qu'on peut dire du </unclear>
                                </add>
