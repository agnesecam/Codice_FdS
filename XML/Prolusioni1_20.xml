                                    <emph>
                                        <hi rend="underline">divergence</hi>
                                    </emph>
                                </term>
                                <choice>
                                    <abbr type="contraction">ds</abbr>
                                    <expan>d<ex>an</ex>s</expan>
                                </choice>
                                <seg>l'<term ref="#espace">espace</term>
                                </seg>
