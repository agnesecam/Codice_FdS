                                <w>chefs</w><pc force="strong">.</pc>
                            </ab>
                            <ab xml:id="pericope_91Aaaa062" n="62" xml:lang="FR" corresp="#it_91Aaaa062 #en_91Aaaa062" facs="#facs_pericope_91Aaaa062"> 
