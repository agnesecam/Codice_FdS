                                <lb xml:id="lb1_p19" n="1" facs="#facs_p19_lb1"/> 
                                <del rend="unreadable" hand="author"><gap reason="cancelled" extent="chars"></gap></del>
                                <seg>Serrons maintenant d'un peu plus</seg> 
                                <lb xml:id="lb2_p19" n="2" facs="#facs_p19_lb2"/> 
                                <w>près</w>
                                <add place="supralinear"><choice><abbr type="abbreviation">Mess</abbr><expan>Mess<ex>ieurs</ex></expan></choice></add>
