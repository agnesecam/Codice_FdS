                                    <add place= "supralinear">de la <term ref="#langue1">langue</term> </add>
                                </subst>
                                <seg>dans le</seg> <term ref="#temps">temps</term><pc force="weak">,</pc>
                                <lb xml:id="lb17_p19" n="17" facs="#facs_p19_lb17"/>
                                <unclear reason="faded">en supposant que nous n'ayons</unclear>
                                <choice><abbr type="contraction">nullmt</abbr><expan>null<ex>e</ex>m<ex>en</ex>t</expan></choice>
                                <seg>à nous </seg>                            
