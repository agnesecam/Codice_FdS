                                <choice><abbr type="brevigraph">+</abbr><expan> plus</expan></choice>
                                <choice><abbr type="abbreviation">identiq<am>.</am></abbr><expan>identiqu<ex>ue</ex></expan></choice>
                                <seg> à elle</seg> <pc force= "weak">-</pc>       
                                <choice><abbr type= "brevigraph">m^</abbr><expan>même</expan></choice><pc force="strong">.</pc>
                                <seg> Les deux choses</seg>
                                <supplied reason= "omitted_in_original" resp= "editor"><pc force = "weak">,</pc></supplied>
                                <subst>
