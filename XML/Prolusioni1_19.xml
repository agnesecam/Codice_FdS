                                <lb xml:id="lb16_p19" n="16" facs="#facs_p19_lb16"/>
                                <seg>la marche</seg>
                                <del rend="unreadable" hand="author"><gap reason="cancelled" quantity="2" extent="words"></gap> </del>
                                <del rend="overstrike" hand="author">du langage</del>
