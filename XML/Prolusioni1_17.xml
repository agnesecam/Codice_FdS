        <group> <!--Testo e traduzione delle 3 prolusioni-->
            <group xml:id="fr_Prolusioni"> <!--TESTO FRANCESE DELLE 3 PROLUSIONI-->
                <text xml:id="fr_Prolusione-1"> <!--FR 1 PROLUSIONE-->
                    <body xml:lang="fr" source="#Bouquet-Engler2002" xml:id="body-francese">
                        <!--Sedicesima pagina-->
                        <pb n="f1r" xml:id="body_p17" facs="#scan_p17"/>
                        <!--Numeri impaginazione a stampa e a mano-->
                        <ab>
                            <fw type="pageNum" xml:id="HandPageNumber-17" rend="align(left)" facs="#facs_HandPageNumber-17"> 17 </fw>
                        </ab>
                        <div xml:id="div_p17_fr" hand="#h1" type="box_testo" >
                            <ab xml:id="pericope_91Aaaa050" n="50" xml:lang="FR" corresp="#it_91Aaaa050 #en_91Aaaa050" facs="#facs_pericope_91Aaaa050" part="F" >
                                <lb xml:id="lb1_p17" n="1" facs="#facs_p17_lb1"/> 
                                par où la <term ref="#langue1">langue</term> se trouve mêlée <unclear reason="illegible"><del rend="overstrike"></del></unclear> à la
                                <lb xml:id="lb2_p17" n="2" facs="#facs_p17_lb2"/> 
                                vie des peuples, <subst><del rend="overstrike"></del><add place="supralinear">à la vie <choice cert="high"><abbr type="suspension">politiq<am>.</am></abbr><expan>politiq<ex>ue</ex></expan></choice>, sociale, <choice><abbr>litt<am>.</am></abbr><expan>litt<ex>éraire</ex></expan></choice></add></subst>, ne sont pas<supplied reason="omitted-in-original" >,</supplied> je le 
                                <lb xml:id="lb3_p17" n="3" facs="#facs_p17_lb3"/> 
                                répète <supplied reason="omitted-in-original" >,</supplied> ou ne sont que de temps à autre ce qu'on 
                                <lb xml:id="lb4_p17" n="4" facs="#facs_p17_lb4"/> 
                                peut appeler la <term ref="#vie_de_la_langue">vie de la langue</term> elle-même.
                            </ab>                           
                            <ab xml:id="pericope_91Aaaa051" n="51" xml:lang="FR" corresp="#it_91Aaaa051 #en_91Aaaa051" facs="#facs_pericope_91Aaaa051"> 
                                <lb xml:id="lb5_p17" n="5" facs="#facs_p17_lb5"/> 
                                <space dim="horizontal" xml:id="spazio1" facs="#space1"></space>C'est à <choice cert="high"><abbr type="brevigraph">1</abbr><expan>un</expan></choice> autre <term ref="#point-de-vue">point de vue</term> par conséquent que la
                                <lb xml:id="lb6_p17" n="6" facs="#facs_p17_lb6"/> 
                                <term ref="#science_du_langage">science du langage</term> revendique le titre de <term ref="#science_historique">science</term> 
                                <lb xml:id="lb7_p17" n="7" facs="#facs_p17_lb7"/> 
                                <choice cert="high"><abbr type="suspension">historiq<am>.</am></abbr><expan>historiq<ex>ue</ex></expan></choice>.
                            </ab>
                            <ab xml:id="pericope_91Aaaa052" n="52" xml:lang="FR" corresp="#it_91Aaaa052 #en_91Aaaa052" facs="#facs_pericope_91Aaaa052">
                                <pc type="dash">-</pc>C'est que <choice><abbr>tte</abbr><expan>toute</expan> </choice> <term ref="#langue">langue</term> <del rend="overstrike" xml:id="canc2" facs="#del2" cert="high">a une histoire</del>, en 
                                <lb xml:id="lb8_p17" n="8" facs="#facs_p17_lb8"/> 
                                elle-même a une <term ref="#histoire">histoire</term> qui se déroule <w>perpé<pc force="weak">-</pc>
                                <lb xml:id="lb9_p17" n="9" facs="#facs_p17_lb9"/> 
                                tuellement</w>, qui est faite d'une succession d'événements
                                <lb xml:id="lb10_p17" n="10" facs="#facs_p17_lb10"/> 
                                <term rend="underline" ref="#linguistique-A2">linguistiques</term>, <unclear reason="illegible"><subst xml:id="sost2" facs="#subst2"><del rend="overstrike"></del><add place="supralinear">lesquels</add></subst></unclear> n'ont point eu de <w>reten<pc force="weak">-</pc>
                                <lb xml:id="lb11_p17" n="11" facs="#facs_p17_lb11"/> 
                                tissement</w> au-dehors <unclear reason="illegible" cert="medium"><del rend="overstrike" xml:id="canc3" cert="medium">de même qu'ils sout</del>
                                <lb xml:id="lb12_p17" n="12" facs="#facs_p17_lb12"/> 
                                <del>complètement independants</del></unclear> et n'ont jamais été
                                <lb xml:id="lb13_p17" n="13" facs="#facs_p17_lb13"/> 
                                inscrits par le célèbre burin de l'<term ref="#histoire">histoire</term> <pc type="semicolon">;</pc>
                            </ab>
                            <ab xml:id="pericope_91Aaaa053" n="53" xml:lang="FR" corresp="#it_91Aaaa053 #en_91Aaaa053" facs="#facs_pericope_91Aaaa053">
                                de même 
                                <lb xml:id="lb14_p17" n="14" facs="#facs_p17_lb14"/> 
                                qu'à leur tour ils sont complètement indépendants 
                                <lb xml:id="lb15_p17" n="15" facs="#facs_p17_lb15"/> 
                                en général de ce qui se passe au-dehors.
                            </ab> 
                            <ab xml:id="pericope_91Aaaa054" n="54" xml:lang="FR" corresp="#it_91Aaaa054 #en_91Aaaa054" facs="#facs_pericope_91Aaaa054">
                                <choice><abbr>Tte.</abbr><expan>Toute</expan></choice> <term ref="#langue1">langue</term>
                                <lb xml:id="lb16_p17" n="16" facs="#facs_p17_lb16"/> 
                                présente, <add place="margin">un peu comme ces grandes moraines qu'on voit au bas de nos glaciers</add><supplied reason="omitted-in-original" >,</supplied> le tableau <unclear reason="illegible"><del rend="overstrike"></del></unclear>
                                d'un <unclear reason="illegible"><del rend="overstrike"></del></unclear>prodigieux amas de choses charriées
                                <lb xml:id="lb17_p17" n="17" facs="#facs_p17_lb17"/> 
                                à travers les siècles <supplied reason="omitted-in-original" >,</supplied> mais de <del rend="overstrike"><hi rend="underline">date tres differente</hi></del>,
                                <lb xml:id="lb18_p17" n="18" facs="#facs_p17_lb18"/> 
                                <del>de même insistos sur en puiut, de même choses qui</del>
                                <lb xml:id="lb19_p17" n="19" facs="#facs_p17_lb19"/> 
                                choses qui <hi rend="underline">ont une date</hi>, et <hi rend="underline">des dates très <term ref="#différence1">différentes</term></hi>, 
                                <lb xml:id="lb20_p17" n="20" facs="#facs_p17_lb20"/> 
                                de même que l'on peut reconnaître dans les dépôts <subst><del rend="overstrike"></del>
                                <lb xml:id="lb21_p17" n="21" facs="#facs_p17_lb21"/> 
                                <add place="margin">glaciaires</add></subst> que je comparais que tel morceau de granit 
                                <lb xml:id="lb22_p17" n="22" facs="#facs_p17_lb22"/> 
                                <del rend="overstrike" ></del> vient d'<choice ><abbr type="brevigraph" cert="high">1</abbr><expan>une</expan></choice> <choice cert="high"><abbr type="suspension">dist<am>.</am></abbr><expan>dist<ex>ance</ex></expan></choice> de <w><choice cert="medium"><abbr type="brevigraph">+</abbr><expan>plu</expan></choice> si<pc force="weak">-</pc>
                                <lb xml:id="lb23_p17" n="23" facs="#facs_p17_lb23"/> 
                                eurs</w> lieues <add place="margin">des <choice><abbr type="brevigraph" cert="medium">+</abbr><expan>plus</expan></choice> hauts sommets de la chaîne,</add> pendant que tel bloc de <unclear reason="illegible"><subst><del rend="overstrike"></del><add place="supralinear"><choice cert="medium"><abbr>IV</abbr><expan>quartz?</expan></choice></add></subst></unclear> remonte
                                <lb xml:id="lb24_p17" n="24" facs="#facs_p17_lb24"/> 
                                à peine aux <choice cert="medium"><abbr rend="underline" type="brevigraph">1er</abbr><expan>premiers</expan></choice> contreforts de la montagne<pc type="suspension points">...</pc>
                            </ab>
                            <ab xml:id="pericope_91Aaaa055" n="55" xml:lang="FR" corresp="#it_91Aaaa055 #en_91Aaaa055" facs="#facs_pericope_91Aaaa055">
                                Donc <hi rend="underline">la <term ref="#langue1">langue</term></hi>
                                <lb xml:id="lb25_p17" n="25" facs="#facs_p17_lb25"/>
                                <hi>a une <term ref="#histoire">histoire</term></hi>, c'est un caractère constant.<unclear reason="illegible"><del rend="understrike"></del></unclear>Est-il 
                                <lb xml:id="lb26_p17" n="26" facs="#facs_p17_lb26"/>
